@model IEnumerable<HotelApp.Models.Booking>

@{
    ViewData["Title"] = "Bookings List";
}

<h1 class="text-primary">Bookings for Hotel</h1>

@if (!Model.Any())
{
    <p class="text-warning">No bookings found for your account.</p>
}
else
{
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Booking ID</th>
                <th>Hotel Name</th>
                <th>Check-in</th>
                <th>Check-out</th>
                <th>No. of Adults</th>
                <th>No. of Children</th>
                <th>Suite Type</th>
                <th>Cuisine</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var booking in Model)
            {
                <tr>
                    <td>@booking.Id</td>
                    <td>@booking.Hotel?.Name</td>
                    <td>@booking.CheckIn.ToShortDateString()</td>
                    <td>@booking.CheckOut.ToShortDateString()</td>
                    <td>@booking.NoOfAdults</td>
                    <td>@booking.NoOfChildren</td>
                    <td>@booking.Suite</td>
                    <td>@booking.Cuisine</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@booking.Id" class="btn btn-sm btn-primary">Edit</a>
                        <form asp-action="Delete" asp-route-id="@booking.Id" method="get" style="display:inline;">
                            <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
